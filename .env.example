
# ===== Global =====
NODE_ENV=development
AWS_REGION=eu-south-2

# ===== S3 (submissions & logs) =====
AWS_S3_BUCKET=uoc-tfm-eval-platform

# ===== SQS (submission jobs) =====
AWS_SQS_QUEUE_NAME=submissions-queue

# ===== SES (passwordless emails) =====
SES_REGION=eu-west-1
SES_SENDER=mgonzalezarve@uoc.edu
# ===== Database (PostgreSQL / RDS) =====
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=tfmdb
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ===== Auth / Security =====
JWT_SECRET=change-me-in-production
MAGIC_LINK_TTL_MIN=30

# ===== API (NestJS) =====
API_PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200

# ===== Runner (Docker task image) =====
RUNNER_IMAGE=ecr.eu-south-2.amazonaws.com/uoc-tfm/runner:latest
RUNNER_TIMEOUT_MS=120000
RUNNER_MAX_LOG_BYTES=200000

# ===== Execution (Java/JUnit) =====
JDK_VERSION=17
BUILD_TOOL=maven   # maven | gradle


